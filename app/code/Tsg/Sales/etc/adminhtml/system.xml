<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="order" translate="label" sortOrder="10">
            <label>Order</label>
        </tab>
        <section id="order_timelines" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Order timelines</label>
            <tab>order</tab>
            <resource>Tsg_Sales::config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General timelines configuration</label>
                <field id="live_time" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Live Time</label>
                    <comment>This text will display how long short details should stay in the new table (in days)</comment>
                </field>
            </group>
        </section>
    </system>
</config>